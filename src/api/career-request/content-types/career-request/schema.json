{
  "kind": "collectionType",
  "collectionName": "career_requests",
  "info": {
    "singularName": "career-request",
    "pluralName": "career-requests",
    "displayName": "CareerRequest"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email"
    },
    "phone": {
      "type": "string"
    },
    "career": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::career.career"
    },
    "message": {
      "type": "text",
      "required": true
    },
    "isRead": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
